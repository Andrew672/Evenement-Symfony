{% extends 'base.html.twig' %}

{% block body %}

    <h1>Cr√©ation d'un article</h1>

    {{ form_start(formArticle )}}

    {{ form_row(formArticle.title,{'attr' : {'placeholder' : "Titre de l'article",'class' : 'form-control'}} )}}
    {{ form_row(formArticle.content ,{'attr' : {'placeholder' : "Contenu de l'article",'class' : 'form-control'}} )}}
